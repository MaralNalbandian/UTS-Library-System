<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.AdminController"
      alignment="center" spacing="10" 
      styleClass="root"
>
   <HBox alignment="top_left" spacing = "10" GridPane.columnIndex="0" GridPane.rowIndex="0">
    
<ImageView id = "UTS-logo">
<image>
    <Image url = "@UTS-logo.jpg" />
</image>  
</ImageView>
<VBox alignment = "top_left" spacing = "1" >
<Label styleClass = "heading" text = "Library" />
<Label styleClass = "heading" text = "Management" />
<Label styleClass = "heading" text = "System" />
</VBox>
   </HBox>
    
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    
    <Button fx:id = "addPatronBtn" text = "Add Patron" onAction="#addPatron"/>
    <Button fx:id = "removePatronBtn" text = "Remove Patron" onAction="#removePatron"/>
    <Button fx:id = "addBookToCatBtn" text = "Add Book to Catalogue" onAction="#addBookToCat"/>
    <Button fx:id = "removeBookFromCatBtn" text = "Remove book from Catalogue" onAction="#removeBookFromCat"/>
    <Button text = "Close Administration Menu" onAction="#handleExit"/>
    
    
</VBox>
